#!/bin/bash

# ------------------------------------------------------------------------------
# | PHP Settings                                                               |
# ------------------------------------------------------------------------------

run_php() {

    # Install php 5.4
    e_header "Installing PHP 5.4..."
    brew tap homebrew/dupes
    brew tap josegonzalez/homebrew-php
    brew install php54 --with-mysql --wihout-apache
    brew install php54-memcached php54-apc php54-xdebug

    echo "-------------------------------------------------------------------------------------------------"
    echo "IMPORTANT NOTE"
    echo "1. Execute: sudo nano -w /etc/apache2/httpd.conf"
    echo "2. Include PHP5.4: LoadModule php5_module /usr/local/opt/php54/libexec/apache2/libphp5.so"
    echo "3. Install MySQL and phpmyadmin: http://goo.gl/rjTty3"
    echo "-------------------------------------------------------------------------------------------------"

}

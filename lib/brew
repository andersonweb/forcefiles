#!/bin/bash

# ------------------------------------------------------------------------------
# | Homebrew Settings                                                          |
# ------------------------------------------------------------------------------

run_brew() {

    # Check for Homebrew
    if type_exists "brew"; then

        # Use the latest version of Homebrew
        e_header "Updating Homebrew..."
        brew update
        e_success "Done"

        # Upgrade any already-installed formulae
        e_header "Updating any existing Homebrew formulae..."
        brew upgrade
        e_success "Done"

        # Install formulaes
        e_header "Installing Homebrew formulae..."

        # Langs
        brew install scala ocaml erlang elixir php55 clojure14

        # Langs completions
        brew install opam node phantomjs php55-xdebug php55-memcached php55-apcu php55-varnish leiningen

        # Databases
        brew install mongodb redis sqlite

        # Server
        brew install nginx

        # Dependencies
        brew install coreutils findutils libksba libtool libyaml libxslt libmemcached libmpc08 libpng libevent libgpg-error libtiff freetype isl011 gettext memcached pcre pkg-config unixodbc cloog018 gmp4 readline mpfr2 wxmac autoconf automake openssl icu4c figlet bash bash-completion tree gcc46 apple-gcc42 jpeg zlib discount ctags gdb wget ack optipng imagemagick

        # Utils
        brew install git htop-osx tmux
        brew install macvim
        brew install https://raw.github.com/Homebrew/homebrew-dupes/master/rsync.rb
        brew install vim --override-system-vi

        e_success "Formulaes successfully installed!"

        # Remove outdated versions from the Cellar
        brew cleanup

    else

        printf "\n"
        e_error "Error: Homebrew not found."
        printf "Aborting...\n"
        exit

    fi

}

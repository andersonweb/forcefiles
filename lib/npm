#!/bin/bash

# ------------------------------------------------------------------------------
# | NPM Settings                                                               |
# ------------------------------------------------------------------------------

run_npm() {

    # Check for npm
    if type_exists "npm"; then
        e_header "Installing NPM modules..."

        # List of npm packages
        local packages="yo gulp bower grunt-cli grunt-init generator-generator express imageoptim-cli dalek-cli lodash-cli ungit docpad nave browserify beefy shelljs uglify-js jshint stylus coffee-script browser-sync karma markdown jade"

        # Install packages globally and quietly
        npm install $packages -g

        [[ $? ]] && e_success "Done"
    else
        printf "\n"
        e_error "Error: npm not found."
        printf "Aborting...\n"
        exit
    fi

}

#!/bin/bash

# ------------------------------------------------------------------------------
# | NPM Settings                                                               |
# ------------------------------------------------------------------------------

run_npm() {

    # Check for npm
    if type_exists "npm"; then

        # Install packages globally and quietly
        e_header "Installing NPM modules..."

        local -a list_packages=(
            "grunt-cli"
            "gulp"
            "bower"
            "imageoptim-cli"
            "nave"
            "browserify"
            "shelljs"
            "uglify-js"
            "jshint"
            "stylus"
            "browser-sync"
            "karma"
            "markdown"
            "jade"
            "harp"
            "mocha"
            "coveralls"
            "istanbul"
            "yslow"
            "ionic"
        )

        npm install $list_packages -gq
        e_success "Node modules successfully installed!"

    else
        printf "\n"
        e_error "Error: npm not found."
        printf "Aborting...\n"
        exit
    fi

}
